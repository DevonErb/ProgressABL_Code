{
  "name": "abl",
  "publisher": "DevonTErb",
  "version": "4.2.0",
  "displayName": "OpenEdge_Progress_ABL",
  "description": "ABL extenstion",
  "author": "DevonTErb",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/DevonErb/ProgressABL_Code.git"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "abl",
        "aliases": [
          "OpenEdge ABL",
          "abl",
          "Progress",
          "Progress 4GL"
        ],
        "extensions": [
          ".w",
          ".v",
          ".p",
          ".i",
          ".cls"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "abl",
        "scopeName": "source.p",
        "path": "./syntaxes/abl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "abl.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "dependencies": {
    "@openEdge/database": "1.0.2",
    "@openEdge/source": "1.0.7",
    "@openEdge/types": "1.0.4"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}